<form>

  <div class="form-group">
    <label> Project name </label>
    {{input type="text" class="form-control" value=name placeholder="Project name"}}
  </div>

  <div class="form-inline">
    <div class="form-group">
      <label> Start Date </label>
      {{input type="date" class="datepicker" value=start }}
    </div>
    &emsp;
    <div class="form-group">
      <label> End Date </label>
      {{input type="date" class="datepicker" value=end }}
    </div>
  </div>

  <div class="form-group">
    <label> Project description </label>
    {{textarea rows="3" type="text" class="form-control" value=description placeholder="Describe the project"}}
  </div>

  <button {{action 'addProject'}} class="btn btn-primary"> Submit </button>

</form>

<h2> Projects </h2>

{{#each model as |project|}}
  <div class="well">
    <h4> {{#link-to 'projects.edit' project.id}} {{project.name}} {{/link-to}}</h4>
    <p> <b> From: </b> {{formatDate project.start}} <b> Until: </b> {{formatDate project.end}} </p>
    <p> <b> Short Description:</b> {{project.description}} </p>
    <button {{action 'deleteTask' project.id}} class="btn btn-danger">Delete</button>
  </div>
{{/each}}